<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    >

    <TextView
        android:id="@+id/v1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="4"
        android:background="#ED0E42"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/v2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="3"
        android:background="#24ED0E"
        android:layout_toLeftOf="@id/v1"
        android:layout_above="@id/v1"
        />

    <TextView
        android:id="@+id/v4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="2"
        android:background="#C63C11"
        android:layout_toLeftOf="@id/v2"
        android:layout_above="@id/v2"
        />

    <TextView
        android:id="@+id/v5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="1"
        android:background="#AFAAA9"
        android:layout_toLeftOf="@id/v4"
        android:layout_above="@id/v4"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/v3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="3"
        android:background="#0E58ED"
        android:layout_toLeftOf="@id/v1"
        android:layout_below="@id/v1"
        />

    <TextView
        android:id="@+id/v6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="5"
        android:background="#BF15E1"
        android:layout_toLeftOf="@id/v3"
        android:layout_below="@id/v3"
        />

    <TextView
        android:id="@+id/v7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="PINK"
        android:background="#CDDC39"
        android:layout_toLeftOf="@id/v6"
        android:layout_below="@id/v6"
        />

</RelativeLayout>