<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#D80606"
        android:textStyle="bold"
        android:text="MÁY TÍNH BỎ TÚI"
        android:digits="0123456789 ."
        android:layout_marginTop="10dp"
         />

    <EditText
        android:id="@+id/edt_sothu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số thứ nhất"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:digits="0123456789 ."
        android:maxLength="10"
        />
    <EditText
        android:id="@+id/edt_sothu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số  thứ hai"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:digits="0123456789 ."
        android:maxLength="10"
        />

    <TextView
        android:id="@+id/tv_KetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#D80606"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Cong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/btn_Tru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25dp"
            android:layout_marginStart="100dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/btn_Chia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25dp"
            android:layout_marginStart="100dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detele"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
</LinearLayout>